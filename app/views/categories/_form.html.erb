<%= form_with(model: category, class: "contents", multipart:true) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class: "block font-medium" %>
    <%= form.text_field :name, class: "rounded-lg py-3 px-5 bg-gray-100 w-full" %>
  </div>

  <div class="field">
  
  <%= form.file_field :icon %>
  </div>




  <div class="inline">
    <%= form.submit "Create Category", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
